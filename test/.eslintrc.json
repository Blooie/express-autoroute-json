{
    "env": {
        "node": true,
        "mocha": true
    },

    "globals": {
      "rootRequire": true
    },

    "extends": "airbnb",
    "rules": {
      "max-len": 0,
      "no-var": 0,
      "prefer-template": 0,
      "space-before-function-paren": 0,
      "object-shorthand": 0,
      "import/no-extraneous-dependencies": [0],
      "prefer-arrow-callback": [0],
      "func-names": [0],
      "new-cap": [2 , { "capIsNewExceptions": ["Q", "ObjectId"] }],
      "no-unused-expressions": [0],
      "no-underscore-dangle": [2, { "allow": ["_id"] }],
      "vars-on-top": 0
    }
}
